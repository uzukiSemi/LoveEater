<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/nomal"
    android:scaleType="fitCenter"
    android:id="@+id/activity_main"
    >

    <ImageButton
        android:layout_width="71dp"
        android:layout_height="32dp"
        android:id="@+id/ibtn_all"
        android:src="@drawable/home_menu"
        android:background="#00000000"
        android:scaleType="fitStart"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="71dp"
        android:layout_height="32dp"
        android:id="@+id/ibtn_smile"
        android:src="@drawable/smile_menu"
        android:background="#00000000"
        android:scaleType="fitStart"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/ibtn_all" />

    <ImageButton
        android:layout_width="71dp"
        android:layout_height="32dp"
        android:id="@+id/ibtn_pure"
        android:src="@drawable/pure_menu"
        android:scaleType="fitStart"
        android:background="#00000000"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/ibtn_smile" />

    <ImageButton
        android:layout_width="71dp"
        android:layout_height="32dp"
        android:id="@+id/ibtn_cool"
        android:src="@drawable/cool_menu"
        android:background="#00000000"
        android:scaleType="fitStart"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/ibtn_pure" />

    <ImageButton
        android:layout_width="71dp"
        android:layout_height="32dp"
        android:id="@+id/ibtn_menu"
        android:src="@drawable/menu_menu"
        android:scaleType="fitStart"
        android:background="#00000000"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/ibtn_cool" />
</RelativeLayout>
